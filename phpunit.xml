<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" colors="true">
    <php>
        <env name="PHP_VERSION" value="7.4"/>
    </php>

    <testsuites>
        <testsuite name="geoCodes">
            <directory>tests</directory>
            <file>tests/BaseDataStructureTest.php</file>
            <file>tests/ConfigSettingsTest.php</file>
            <file>tests/IsoCountriesTest.php</file>
            <file>tests/IsoCurrenciesTest.php</file>
            <file>tests/IsoGeoSetsTest.php</file>
        </testsuite>
    </testsuites>

    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./src</directory>
        </include>
    </coverage>
</phpunit>

